# Development Environment Configuration
# Copy this file to .env.development and fill in your actual values
# NEVER commit .env.development or any file with real secrets to git

# Database - Get this from your Neon console
# https://console.neon.tech/
DATABASE_URL=postgresql://username:password@hostname.neon.tech/database?sslmode=require

# Environment
NODE_ENV=development

# Session Configuration
# Generate a random string for local development
SESSION_SECRET=your-secure-random-session-secret-here

# PHI Encryption Key - CRITICAL: Generate a secure 64-character hex string
# Use: openssl rand -hex 32
# This key encrypts Protected Health Information - keep it secure!
PHI_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Feature Flags - Development settings
USE_HIPAA_SCHEMA=true
ENABLE_HIPAA_ROUTES=true
ENABLE_HIPAA_ENCRYPTION=true
ENABLE_HIPAA_AUDIT_LOGGING=true

# Stripe (use test keys for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (optional for development)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# AI Integration (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Redis (optional for development)
# REDIS_URL=redis://localhost:6379

# Base URL for development
BASE_URL=http://localhost:5000
